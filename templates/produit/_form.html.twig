<div class="container mt-5 d-flex justify-content-center">
    <div class="card" style="width: 30rem;">
        <div class="card-header bg-primary text-white text-center">
            <h5>Ajouter un produit</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="form-group mb-3">
                    {{ form_label(form.nomP, 'Nom du produit') }}
                    {{ form_widget(form.nomP, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    {{ form_errors(form.nomP) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.image, 'Image') }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    {{ form_errors(form.image) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.stock, 'Stock disponible') }}
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    {{ form_errors(form.stock) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.status, 'Status') }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    {{ form_errors(form.status) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.prix, 'Prix') }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control form-control-sm'}}) }}
                    {{ form_errors(form.prix) }}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-sm">
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
