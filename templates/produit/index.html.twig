{% block content %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomP</th>
                <th>Image</th>
                <th>Stock</th>
                <th>Description</th>
                <th>Status</th>
                <th>Prix</th>
                    <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nomP }}</td>
              <td><img src="{{ asset('produit/' ~ produit.image) }}" width="150px"></td>
                <td>{{ produit.stock }}</td> 
                <td>{{ produit.description }}</td>
                <td>{{ produit.status.value }}</td>
                <td>{{ produit.prix }}</td>
                  <td>{{ produit.ProdCategory}}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-primary btn-sm">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-primary btn-sm" style="background-color: #008000; color: #ffffff;">edit</a>
                    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                        <button class="btn btn-danger btn-sm">Delate</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
